page{
    background-color: #e5e5e5;
}
.ticketContent {
    background-color: #fff;
    width: 100%;
    display: flex;
    margin-bottom: 20rpx;
}
.fromInfo{
    flex: 1;
    padding-top: 25rpx;
}
.fromInfo .fromTime{
    font-size: 45rpx;
    text-align: left;
    padding-left: 25rpx;
}
.fromInfo .fromAddr{
    font-size: 34rpx;
    text-align: left;
    padding-bottom: 35rpx;
    padding-left: 25rpx;
}
.fromInfo .secondSeat{
    font-size: 24rpx;
    text-align: left;
    color: #727272;
    padding-bottom: 0rpx;
    padding-left: 25rpx;
}
.ticketInfo {
    flex: 1;
    color: #727272;
    padding-top: 25rpx;
}
.ticketInfo image{
    width: 100%;
    height: 45rpx;
}
.ticketInfo .trainNum{
    font-size: 22rpx;
    text-align: center;
}
.ticketInfo .needTime{
    font-size: 22rpx;
    text-align: center;
    padding-bottom: 30rpx;
}
.ticketInfo .firstSeat{
    font-size: 24rpx;
    text-align: center;
    color: #727272;
    padding-bottom: 30rpx;
}
.toInfo {
    flex: 1;
    padding-top: 25rpx;
}
.toInfo .toTime {
    text-align: center;
    font-size: 45rpx;
    text-align: right;
}
.toInfo .toAddr {
    font-size: 34rpx;
    text-align: right;
    padding-bottom: 35rpx;
}
.toInfo .businessSeat {
    color: #727272;
    font-size: 24rpx;
    text-align: right;
    padding-bottom: 0rpx;
}
.price {
    flex: 1;
    text-align: right;
    padding-right: 25rpx;
    padding-top: 25rpx;
    color: red;
}

    