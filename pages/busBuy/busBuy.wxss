page {
    background-color: #ecf8fa;
}
.busContent {
    background-color: #fff;
    border-bottom: 40rpx solid #ecf8fa;
}
.searchCity {
    display: flex;
    padding: 90rpx 30rpx 30rpx 30rpx;
}
.searchCity image {
    width: 70rpx;
    height: 70rpx;
}
.fromCity {
    flex: 1;
    color: #979797;
    border-bottom: 2px solid #ecf8fa;
}
.changeAddr {
    flex: 1;
    text-align: center;
    
}
.toCity {
    flex: 1;
    color: #979797;
    text-align: right;
    border-bottom: 1px solid #ecf8fa;
}
.chooseTime {
    padding: 30rpx;
}
.search {
    background: red;
    color:#ffffff;
    margin: 20rpx 20rpx 0rpx 20rpx;
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 20rpx;
}
.searchBusTic {
    margin-bottom: 50rpx;
}

.boat {
